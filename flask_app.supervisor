;/etc/supervisor/conf.d/flask_app.conf
[program:flask_app]
user = root
directory = /flask_app
command = /flask_app/run.sh gunicorn -c /app/config/gunicorn.conf.py wsgi

priority = 900
autostart = true
autorestart = true
stopsignal = TERM


redirect_stderr = true
stdout_logfile = /flask_app/var/log/%(program_name)s.log
stderr_logfile = /flask_app/var/log/%(program_name)s.log